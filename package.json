{
  "name": "forest",
  "displayName": "Forest",
  "description": "Manage parallel feature development with git worktrees",
  "version": "0.1.0",
  "publisher": "vladstudio",
  "icon": "forest-color.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladstudio/forest"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "worktree",
    "linear",
    "workflow",
    "monorepo"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "bun run package",
    "compile": "bun run check-types && node esbuild.js",
    "watch": "concurrently \"node esbuild.js --watch\" \"tsc --noEmit --watch --project tsconfig.json\"",
    "package": "bun run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "concurrently": "^9.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "forest",
          "title": "Forest",
          "icon": "resources/forest.svg"
        }
      ]
    },
    "views": {
      "forest": [
        {
          "id": "forest.setup",
          "name": "Setup",
          "when": "!forest.active"
        },
        {
          "id": "forest.ghMissing",
          "name": "Setup",
          "when": "forest.active && !forest.ghAvailable"
        },
        {
          "id": "forest.trees",
          "name": "Forest",
          "when": "forest.active && forest.ghAvailable"
        },
        {
          "id": "forest.shortcuts",
          "name": "Shortcuts",
          "when": "forest.active && forest.ghAvailable && forest.isTree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "forest.setup",
        "contents": "$(folder) Forest needs an open folder to operate.\n\n[Open Folder](command:vscode.openFolder)",
        "when": "workspaceFolderCount == 0"
      },
      {
        "view": "forest.setup",
        "contents": "$(gear) Forest is not configured for this workspace.\n\nAsk your AI agent:\n\n`Set up Forest (https://github.com/vladstudio/forest) for this project. Create .forest/config.json with the required configuration.`\n\n[Copy to Clipboard](command:forest.copySetupPrompt)\n\n[Reload Window](command:workbench.action.reloadWindow)",
        "when": "workspaceFolderCount != 0"
      },
      {
        "view": "forest.ghMissing",
        "contents": "$(warning) GitHub CLI (gh) is required.\n\nForest uses gh to create and manage pull requests.\n\n[Install GitHub CLI](https://cli.github.com)"
      },
      {
        "view": "forest.trees",
        "contents": "No trees yet.\n[New Tree](command:forest.create)",
        "when": "forest.active && forest.noTrees"
      }
    ],
    "commands": [
      {
        "command": "forest.copySetupPrompt",
        "title": "Copy Setup Prompt",
        "category": "Forest"
      },
      {
        "command": "forest.create",
        "title": "New Tree…",
        "category": "Forest",
        "icon": "$(add)"
      },
      {
        "command": "forest.start",
        "title": "Start — Create Tree from Issue",
        "category": "Forest",
        "icon": "$(play)"
      },
      {
        "command": "forest.switch",
        "title": "Switch Tree",
        "category": "Forest",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "forest.ship",
        "title": "Ship — Push & Create PR",
        "category": "Forest",
        "icon": "$(rocket)"
      },
      {
        "command": "forest.cleanup",
        "title": "Cleanup — Delete Branch & Worktree",
        "category": "Forest",
        "icon": "$(check-all)"
      },
      {
        "command": "forest.cancel",
        "title": "Delete — Remove Without Merging",
        "category": "Forest",
        "icon": "$(trash)"
      },
      {
        "command": "forest.shelve",
        "title": "Shelve — Remove Worktree, Keep Branch",
        "category": "Forest",
        "icon": "$(archive)"
      },
      {
        "command": "forest.resume",
        "title": "Resume — Recreate Worktree",
        "category": "Forest",
        "icon": "$(debug-start)"
      },
      {
        "command": "forest.update",
        "title": "Update — Merge from Main",
        "category": "Forest",
        "icon": "$(refresh)"
      },
      {
        "command": "forest.list",
        "title": "List All Trees",
        "category": "Forest",
        "icon": "$(list-tree)"
      },
      {
        "command": "forest.copyBranch",
        "title": "Copy Branch Name",
        "category": "Forest",
        "icon": "$(copy)"
      },
      {
        "command": "forest.openMain",
        "title": "Open Main Repo",
        "category": "Forest",
        "icon": "$(home)"
      },
      {
        "command": "forest.refresh",
        "title": "Refresh",
        "category": "Forest",
        "icon": "$(refresh)"
      },
      {
        "command": "forest.openShortcut",
        "title": "Open Shortcut",
        "category": "Forest",
        "icon": "$(play)"
      },
      {
        "command": "forest.stopShortcut",
        "title": "Stop Terminal",
        "category": "Forest",
        "icon": "$(debug-stop)"
      },
      {
        "command": "forest.restartShortcut",
        "title": "Restart Terminal",
        "category": "Forest",
        "icon": "$(debug-restart)"
      },
      {
        "command": "forest.rebase",
        "title": "Rebase onto Main",
        "category": "Forest",
        "icon": "$(git-merge)"
      },
      {
        "command": "forest.openPR",
        "title": "View Pull Request",
        "category": "Forest",
        "icon": "$(link-external)"
      },
      {
        "command": "forest.warmTemplate",
        "title": "Warm Template",
        "category": "Forest",
        "icon": "$(flame)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "forest.refresh",
          "when": "view == forest.trees",
          "group": "navigation"
        },
        {
          "command": "forest.create",
          "when": "view == forest.trees",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "forest.start",
          "when": "view == forest.trees && viewItem == todo-issue",
          "group": "inline"
        },
        {
          "command": "forest.copyBranch",
          "when": "viewItem =~ /^tree-/",
          "group": "1_navigation"
        },
        {
          "command": "forest.ship",
          "when": "viewItem == tree-progress",
          "group": "2_ship"
        },
        {
          "command": "forest.openPR",
          "when": "viewItem == tree-review || viewItem == tree-done",
          "group": "2_ship"
        },
        {
          "command": "forest.update",
          "when": "viewItem == tree-progress || viewItem == tree-review",
          "group": "3_lifecycle"
        },
        {
          "command": "forest.rebase",
          "when": "viewItem == tree-progress || viewItem == tree-review",
          "group": "3_lifecycle"
        },
        {
          "command": "forest.resume",
          "when": "viewItem == tree-shelved",
          "group": "3_lifecycle"
        },
        {
          "command": "forest.cleanup",
          "when": "viewItem == tree-done",
          "group": "4_danger"
        },
        {
          "command": "forest.shelve",
          "when": "viewItem == tree-progress || viewItem == tree-review",
          "group": "4_danger"
        },
        {
          "command": "forest.cancel",
          "when": "viewItem =~ /^tree-/ && viewItem != tree-done",
          "group": "4_danger"
        },
        {
          "command": "forest.stopShortcut",
          "when": "viewItem == shortcut-terminal-running",
          "group": "inline"
        },
        {
          "command": "forest.stopShortcut",
          "when": "viewItem == shortcut-terminal-running",
          "group": "1_actions"
        },
        {
          "command": "forest.restartShortcut",
          "when": "viewItem == shortcut-terminal-running",
          "group": "1_actions"
        }
      ],
      "commandPalette": [
        {
          "command": "forest.openShortcut",
          "when": "false"
        },
        {
          "command": "forest.stopShortcut",
          "when": "false"
        },
        {
          "command": "forest.restartShortcut",
          "when": "false"
        },
        {
          "command": "forest.start",
          "when": "false"
        }
      ]
    },
    "keybindings": []
  }
}
