{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": ["$tsc-watch", "$esbuild-watch"],
      "isBackground": true,
      "presentation": { "reveal": "never" },
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": ["$tsc", "$esbuild"],
      "group": "build"
    }
  ]
}
